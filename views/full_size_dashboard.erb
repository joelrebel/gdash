<html>
<head>
    <meta http-equiv="refresh" content="60">
</head>
<% if @error %>
   <h2><%= @error %></h2>
<% else %>
<body bgcolor="black">
<% puts 'inside ' + __FILE__
<table width="100%" height="100%">
   
    <% @dashboard.graphs.in_groups_of(params["columns"]) do |graphs| %>
        <tr>
        <% graphs.each do |graph| %>
	   
            <td valign="middle" align="center">
            <% if graph %>
	        <% graph_url = graph[:graphite][:url].gsub(/\$HOST/, params[:host]) %>
                <img src='<%= [@top_level[@params[:category]].graphite_render, graph_url].join "?" %>'>
            <% end %>
            </td>
        <% end %>
        </tr>
    <% end %>
</table>
</body>
<% end %>
</html>
